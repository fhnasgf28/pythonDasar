<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="equip3_sale_report.sh_top_selling_product_report_action" model="ir.actions.report">
        <field name="name">Top Selling Products</field>
        <field name="model">sh.tsp.top.selling.product.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">equip3_sale_report.sh_tc_top_product_doc</field>
        <field name="report_file">equip3_sale_report.sh_tc_top_product_doc</field>
        <field name="print_report_name">'Top Selling Products assegaf'</field>
    </record>

    <template id="sh_tc_top_product_doc2_external_layout">
        <!-- Multicompany -->
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>
        <t t-call="equip3_sale_report.sh_tc_top_product_doc2_header"/>
        <div class="article o_report_layout_standard" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id">
            <t t-raw="0"/>
        </div>
        <t t-call="general_template.templates_footer"/>
    </template>

    <template id="sh_tc_top_product_doc2_header">
        <div class="header">
            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                <tbody>
                    <tr>
                        <td>
                            <center>
                                <table border="0" cellpadding="0" cellspacing="0" style="padding:0px 20px 0px 20px; margin:0; background:#fff; line-height:20px; vertical-align:middle; float:none;" width="100%">
                                    <tr>
                                        <td align="left" colspan="2" t-attf-style="vertical-align:middle; float:none; color:#{text_color or '#ffffff'}; padding:0 0px;" valign="top">
                                            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                                <tr>
                                                    <td align="left" style="color:#4D4D4F; padding: 0px 15px; border-right: 1px solid #D4D1D1; width:10%; vertical-align:middle; float:none;" valign="middle">
                                                        <img style="max-height:50px; vertical-align: top; float:none;" t-att-src="'data:image/png;base64,%s'% to_text(o.company_id.logo)" t-if="o.company_id.logo"/>
                                                        <br/>
                                                    </td>
                                                    <td style="padding:15px 0px 0px 15px; width:30%" valign="top">
                                                        <p t-attf-style="text-transform:capitalize; color: #{theme_color or '#ffffff'}; font-weight:bold;margin:0; margin-bottom:5px;">Address</p>
                                                        <t t-call="general_template.templates_company_details"/>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </table>
                            </center>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </template>

    <template id="sh_tc_top_product_doc2">
        <t t-call="equip3_sale_report.sh_tc_top_product_doc2_external_layout">
            <t t-set="theme_color" t-value="o.company_id and o.company_id.theme_color"/>
            <t t-set="theme_text_color" t-value="o.company_id and o.company_id.theme_text_color"/>
            <t t-set="company_color" t-value="o.company_id and o.company_id.company_color"/>
            <t t-set="company_address_color" t-value="o.company_id and o.company_id.company_address_color"/>
            <t t-set="customer_color" t-value="o.company_id and o.company_id.customer_color"/>
            <t t-set="customer_address_color" t-value="o.company_id and o.company_id.customer_address_color"/>
            <t t-set="text_color" t-value="o.company_id and o.company_id.text_color"/>
            <div class="page" t-att-style="'font-family:'+o.company_id.font_id.family+';font-size:'+str(o.company_id.font_size)+'px;'">
                <div class="oe_structure" />
                <div t-attf-style="background-color:#f2f2f2;border-bottom:1px solid #{theme_color or '#ececec'}; overflow: visible; margin-bottom: 20px;"/>
                <div class="row">
                    <div class="col-12 mx-auto">
                        <t t-if="o.type == 'basic'">
                            <div class="text-center">
                                <b>
                                    <h4>Top Selling Products assegaf</h4>
                                </b>
                                <br/>
                                <b>
                                    <span t-field="o.date_from" t-options="{'widget': 'date', 'format': 'dd MMMM yyyy'}" />
                                    -
                                    <span t-field="o.date_to" t-options="{'widget': 'date', 'format': 'dd MMMM yyyy'}" />
                                </b>
                            </div>
                        </t>
                        <t t-else="">
                            <div class="text-center">
                                <b>
                                    <h4>Top Selling Products assegaf</h4>
                                </b>
                            </div>
                            <br/>
                        </t>
                    </div>
                </div>
                <br />
                <table border="0" cellpadding="0" cellspacing="0" t-attf-style="color:#fff; text-transform:capitalize; border: 1px solid #{theme_color or '#000000'};" width="100%">
                    <tr t-attf-style="color: #{theme_text_color or '#FFFFFF'}; background-color: #{theme_color or '#000000'};">
                        <td t-attf-style="font-weight:bold;">
                            <div style="padding:9px 15px; margin_right: 50px">
                                <span>Printed On </span>
                                <br/>
                                <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/>
                            </div>
                        </td>
                    </tr>
                </table>
                <div class="col-12 mx-auto">
                    <t t-if="o.type != 'basic'">
                        <br/>
                        <div class="row">
                            <div class="col-6">
                                <b>
                                    <span t-field="o.date_from" t-options="{'widget': 'date', 'format': 'dd MMMM yyyy'}" />
                                    -
                                    <span t-field="o.date_to" t-options="{'widget': 'date', 'format': 'dd MMMM yyyy'}" />
                                </b>
                            </div>
                            <div class="col-6">
                                <b>
                                    <span t-field="o.date_compare_from" t-options="{'widget': 'date', 'format': 'dd MMMM yyyy'}" />
                                    -
                                    <span t-field="o.date_compare_to" t-options="{'widget': 'date', 'format': 'dd MMMM yyyy'}" />
                                </b>
                            </div>
                        </div>
                    </t>
                </div>
                <!-- Filters info -->
                <div class="col-12 mx-auto">
                    <t t-if="o.branch_ids">
                        <div><b>Branch:</b>
                            <t t-foreach="o.branch_ids" t-as="br">
                                <span t-esc="br.name"/>
                                <t t-if="br != o.branch_ids[-1]">, </t>
                            </t>
                        </div>
                    </t>
                    <t t-if="o.product_type_ids">
                        <div><b>Product Type:</b>
                            <t t-foreach="o.product_type_ids" t-as="pt">
                                <span t-esc="pt.name"/>
                                <t t-if="pt != o.product_type_ids[-1]">, </t>
                            </t>
                        </div>
                    </t>
                    <t t-if="o.product_categ_ids">
                        <div><b>Product Category:</b>
                            <t t-foreach="o.product_categ_ids" t-as="pc">
                                <span t-esc="pc.name"/>
                                <t t-if="pc != o.product_categ_ids[-1]">, </t>
                            </t>
                        </div>
                    </t>
                </div>

                <hr/>
                <t t-if="o.type == 'basic'">
                    <div class="row">
                        <div class="col-12">
                            <t t-set="number" t-value="1"/>
                            <table style="margin-top: 10px;" class="table table-striped">
                                <tr t-attf-style="color: #{theme_text_color or '#FFFFFF'}; background-color: #{theme_color or '#000000'};">
                                    <td align="center" width="10%" style="font-family: 'Helvetica'; font-size: 14px;">
                                        <b>No.</b>
                                    </td>
                                    <td align="center" width="30%" style="font-family: 'Helvetica'; font-size: 14px;">
                                        <b>Product</b>
                                    </td>
                                    <td align="center" width="15%" style="font-family: 'Helvetica'; font-size: 14px;">
                                        <b>Qty Sold</b>
                                    </td>
                                    <td align="center" width="20%" style="font-family: 'Helvetica'; font-size: 14px;">
                                        <b>Branch</b>
                                    </td>
                                    <td align="center" width="15%" style="font-family: 'Helvetica'; font-size: 14px;">
                                        <b>Product Type</b>
                                    </td>
                                    <td align="center" width="15%" style="font-family: 'Helvetica'; font-size: 14px;">
                                        <b>Product Category</b>
                                    </td>
                                </tr>
                                <t t-set="current_branch" t-value="''"/>
                                <t t-foreach="o.top_product_ids" t-as="basic">
                                    <!-- Group header by branch -->
                                    <t t-if="basic.branch_name != current_branch">
                                        <tr>
                                            <td colspan="6" style="border: 1px solid black; font-weight: bold; background-color: #f2f2f2;">
                                                Branch: <span t-esc="basic.branch_name or '-'"/>
                                            </td>
                                        </tr>
                                        <t t-set="current_branch" t-value="basic.branch_name"/>
                                    </t>
                                    <tr>
                                        <td style="border: 1px solid black;">
                                            <span t-esc="number" />
                                        </td>
                                        <td style="border: 1px solid black;">
                                            <span t-field="basic.name" />
                                        </td>
                                        <td style="border: 1px solid black;">
                                            <span t-field="basic.qty"/>
                                        </td>
                                        <td style="border: 1px solid black;">
                                            <span t-esc="basic.branch_name"/>
                                        </td>
                                        <td style="border: 1px solid black;">
                                            <span t-esc="basic.product_type_label"/>
                                        </td>
                                        <td style="border: 1px solid black;">
                                            <span t-esc="basic.category_name"/>
                                        </td>
                                        <t t-set="number" t-value="number + 1" />
                                    </tr>
                                </t>
                            </table>
                        </div>
                    </div>
                </t>
                <t t-else="">
                    <div class="row">
                        <div class="col-6">
                            <t t-set="number" t-value="1"/>
                            <table style="margin-top: 10px;" class="table table-striped">
                                <tr t-attf-style="color: #{theme_text_color or '#FFFFFF'}; background-color: #{theme_color or '#000000'};">
                                    <td align="center" width="10%" style="font-family: 'Helvetica'; font-size: 14px;">
                                        <b>No.</b>
                                    </td>
                                    <td align="center" width="30%" style="font-family: 'Helvetica'; font-size: 14px;">
                                        <b>Product</b>
                                    </td>
                                    <td align="center" width="15%" style="font-family: 'Helvetica'; font-size: 14px;">
                                        <b>Qty Sold</b>
                                    </td>
                                    <td align="center" width="20%" style="font-family: 'Helvetica'; font-size: 14px;">
                                        <b>Branch</b>
                                    </td>
                                    <td align="center" width="15%" style="font-family: 'Helvetica'; font-size: 14px;">
                                        <b>Product Type</b>
                                    </td>
                                    <td align="center" width="15%" style="font-family: 'Helvetica'; font-size: 14px;">
                                        <b>Product Category</b>
                                    </td>
                                </tr>
                                <t t-set="current_branch" t-value="''"/>
                                <t t-foreach="o.top_product_ids" t-as="basic">
                                    <!-- Group header by branch -->
                                    <t t-if="basic.branch_name != current_branch">
                                        <tr>
                                            <td colspan="6" style="border: 1px solid black; font-weight: bold; background-color: #f2f2f2;">
                                                Branch: <span t-esc="basic.branch_name or '-'"/>
                                            </td>
                                        </tr>
                                        <t t-set="current_branch" t-value="basic.branch_name"/>
                                    </t>
                                    <tr>
                                        <td style="border: 1px solid black;">
                                            <span t-esc="number" />
                                        </td>
                                        <td style="border: 1px solid black;">
                                            <span t-field="basic.name" />
                                        </td>
                                        <td style="border: 1px solid black;">
                                            <span t-field="basic.qty"/>
                                        </td>
                                        <td style="border: 1px solid black;">
                                            <span t-esc="basic.branch_name"/>
                                        </td>
                                        <td style="border: 1px solid black;">
                                            <span t-esc="basic.product_type_label"/>
                                        </td>
                                        <td style="border: 1px solid black;">
                                            <span t-esc="basic.category_name"/>
                                        </td>
                                        <t t-set="number" t-value="number + 1" />
                                    </tr>
                                </t>
                            </table>
                        </div>
                        <div class="col-6">
                            <t t-set="number" t-value="1"/>
                            <table style="margin-top: 10px;" class="table table-striped">
                                <tr t-attf-style="color: #{theme_text_color or '#FFFFFF'}; background-color: #{theme_color or '#000000'};">
                                    <td align="center" width="10%" style="font-family: 'Helvetica'; font-size: 14px;">
                                        <b>No.</b>
                                    </td>
                                    <td align="center" width="30%" style="font-family: 'Helvetica'; font-size: 14px;">
                                        <b>Product</b>
                                    </td>
                                    <td align="center" width="15%" style="font-family: 'Helvetica'; font-size: 14px;">
                                        <b>Qty Sold</b>
                                    </td>
                                    <td align="center" width="20%" style="font-family: 'Helvetica'; font-size: 14px;">
                                        <b>Branch</b>
                                    </td>
                                    <td align="center" width="15%" style="font-family: 'Helvetica'; font-size: 14px;">
                                        <b>Product Type</b>
                                    </td>
                                    <td align="center" width="15%" style="font-family: 'Helvetica'; font-size: 14px;">
                                        <b>Product Category</b>
                                    </td>
                                </tr>
                                <t t-set="current_branch" t-value="''"/>
                                <t t-foreach="o.top_product_compare_ids" t-as="basic">
                                    <!-- Group header by branch -->
                                    <t t-if="basic.branch_name != current_branch">
                                        <tr>
                                            <td colspan="6" style="border: 1px solid black; font-weight: bold; background-color: #f2f2f2;">
                                                Branch: <span t-esc="basic.branch_name or '-'"/>
                                            </td>
                                        </tr>
                                        <t t-set="current_branch" t-value="basic.branch_name"/>
                                    </t>
                                    <tr>
                                        <td style="border: 1px solid black;">
                                            <span t-esc="number" />
                                        </td>
                                        <td style="border: 1px solid black;">
                                            <span t-field="basic.name" />
                                        </td>
                                        <td style="border: 1px solid black;">
                                            <span t-field="basic.qty"/>
                                        </td>
                                        <td style="border: 1px solid black;">
                                            <span t-esc="basic.branch_name"/>
                                        </td>
                                        <td style="border: 1px solid black;">
                                            <span t-esc="basic.product_type_label"/>
                                        </td>
                                        <td style="border: 1px solid black;">
                                            <span t-esc="basic.category_name"/>
                                        </td>
                                        <t t-set="number" t-value="number + 1" />
                                    </tr>
                                </t>
                            </table>
                        </div>
                    </div>
                    <br />
                    <br />
                    <div class="row">
                        <div class="col-6">
                            <table style="margin-top: 10px;" class="table table-striped">
                                <tr t-attf-style="color: #{theme_text_color or '#FFFFFF'}; background-color: #{theme_color or '#000000'};">
                                    <td align="center" width="40%" style="font-family: 'Helvetica'; font-size: 14px;">
                                        <b>New Products</b>
                                    </td>
                                </tr>
                                <t t-foreach="o.new_product_ids" t-as="np">
                                    <tr>
                                        <td style="border: 1px solid black;">
                                            <span t-field="np.name" />
                                        </td>
                                    </tr>
                                </t>
                            </table>
                        </div>
                        <div class="col-6">
                            <table style="margin-top: 10px;" class="table table-striped">
                                <tr t-attf-style="color: #{theme_text_color or '#FFFFFF'}; background-color: #{theme_color or '#000000'};">
                                    <td align="center" width="20%" style="font-family: 'Helvetica'; font-size: 14px;">
                                        <b>Lost Products</b>
                                    </td>
                                </tr>
                                <t t-foreach="o.lost_product_ids" t-as="lp">
                                    <tr>
                                        <td style="border: 1px solid black;">
                                            <span t-field="lp.name" />
                                        </td>
                                    </tr>
                                </t>
                            </table>
                        </div>
                    </div>
                </t>
            </div>
        </t>
    </template>

    <template id="sh_tc_top_product_doc">
        <t t-call="web.html_container">
            <t t-as="o" t-foreach="docs">
                <t t-call="equip3_sale_report.sh_tc_top_product_doc2"/>
            </t>
        </t>
    </template>
</odoo>