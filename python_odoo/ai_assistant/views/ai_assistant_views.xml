<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_ai_assistant_tree" model="ir.ui.view">
        <field name="name">ai.assistant.tree</field>
        <field name="model">ai.assistant</field>
        <field name="arch" type="xml">
            <tree string="AI Assistants">
                <field name="name"/>
                <field name="model"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_ai_assistant_form" model="ir.ui.view">
        <field name="name">ai.assistant.form</field>
        <field name="model">ai.assistant</field>
        <field name="arch" type="xml">
            <form string="AI Assistant">
                <header>
                    <button name="action_test_assistant" type="object" string="Test Assistant" class="oe_highlight"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_test_assistant" type="object" class="oe_stat_button" icon="fa-magic">
                            <field name="test_result" widget="statinfo" string="Test" nolabel="1"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="AI Assistant Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="active"/>
                            <field name="model"/>
                        </group>
                        <group>
                            <field name="temperature"/>
                            <field name="max_tokens"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_ai_assistant" model="ir.actions.act_window">
        <field name="name">AI Assistants</field>
        <field name="res_model">ai.assistant</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first AI Assistant
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_ai_assistant_root" name="AI Assistant" sequence="100"/>
    <menuitem id="menu_ai_assistant" name="AI Assistants" parent="menu_ai_assistant_root" action="action_ai_assistant"/>
</odoo>
