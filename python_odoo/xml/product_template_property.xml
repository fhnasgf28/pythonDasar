<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- product.template inherit form view -->
        <record id="product_product_template_form_view_inherit" model="ir.ui.view">
            <field name="name">product.template.inherit.view.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_quotations"
                            type="object"
                            class="oe_stat_button"
                            icon="o-hm-smart-crm-quotations">
                        <field name="quotation_count" widget="statinfo" string="Quotations"/>
                    </button>
                    <button class="oe_stat_button" type="object" name="action_view_invoices" icon="o-hm-smart-all-invoices">
                        <div class="o_stat_info">
                            <field name="invoice_amount_total" class="o_stat_value" string="Invoice(s)" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                            <span class="o_stat_text">Invoice(s)</span>
                        </div>
                    </button>
                </xpath>
            </field>
        </record>
        <!-- product.template inherit form view -->
        <record id="product_template_form_view_inherit" model="ir.ui.view">
            <field name="name">product.template.inherit.view.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="equip3_property_masterdata.product_template_form_view_inherit"/>
            <field name="arch" type="xml">
                <field name="attachment" position="before">
                    <field name="parent_property_id" domain="[('type','=','property')]"/>
                </field>
            </field>
        </record>

        <!-- product.template inherit form view -->
        <record id="product_template_property_product_view_form_inherit" model="ir.ui.view">
            <field name="name">product.template.inherit.view.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="equip3_property_masterdata.product_template_property_product_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_quotations"
                            type="object"
                            class="oe_stat_button"
                            icon="o-hm-smart-crm-quotations">
                        <field name="quotation_count" widget="statinfo" string="Quotations"/>
                    </button>
                    <button class="oe_stat_button" type="object" name="action_view_invoices" icon="o-hm-smart-all-invoices">
                        <div class="o_stat_info">
                            <field name="invoice_amount_total" class="o_stat_value" string="Invoice(s)" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                            <span class="o_stat_text">Invoice(s)</span>
                        </div>
                    </button>
                </xpath>
            </field>
        </record>

        <record id="product_template_property_transaction_view_form" model="ir.ui.view">
            <field name="name">product.template.view.form</field>
            <field name="model">product.template</field>
            <field name="arch" type="xml">
                <form string="Property Transaction" create="false">
                    <header>
                        <field name="is_property" invisible="1"/>
                        <button name="button_confirm" string="Confirm Property" type="object" class="oe_highlight" icon="fa-check" states="draft" groups="property_rental_mgt_app.group_manager"/>
                        <button type="object" name="button_set_to_draft" string=" Set to Draft" icon="fa-edit" states="rent,sale" groups="property_rental_mgt_app.group_manager"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,for_sale,for_rent" attrs="{'invisible':[('state','!=','draft')]}"/>
                        <field name="for_sale_state" widget="statusbar" statusbar_visible="for_sale,reserved,sold" attrs="{'invisible':[('is_for_sale','!=',True)]}"/>
                        <field name="for_rent_state" widget="statusbar" statusbar_visible="for_rent,reserved,rented" attrs="{'invisible':[('is_for_rent','!=',True)]}"/>
                        <field name="for_sale_rent_state" widget="statusbar" statusbar_visible="for_sale_rent,reserved,rented,sold" attrs="{'invisible':[('is_for_sale_rent','!=',True)]}"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_quotations"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="o-hm-smart-crm-quotations">
                                <field name="quotation_count" widget="statinfo" string="Quotations"/>
                            </button>
                            <button class="oe_stat_button" type="object" name="action_view_invoices" icon="o-hm-smart-all-invoices">
                                <div class="o_stat_info">
                                    <field name="invoice_amount_total" class="o_stat_value" string="Invoice(s)" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                                    <span class="o_stat_text">Invoice(s)</span>
                                </div>
                            </button>
                        </div>

                        <field name="image_1920" widget="image" class="oe_avatar" options="{'preview_image': 'image_128'}"/>
                        <div class="oe_title">
                            <label for="name" string="Property Name"/>
                            <h1>
                                <field name="name" attrs="{'invisible': [('name','=','/')]}" placeholder="Property Name"/>
                            </h1>

                        </div>
                        <group name="first_group">
                            <group name="second_group">
                                <field name="parent_property_id" domain="[('type','=','property')]"/>
                                <field name="default_code" string="Property Code"/>
                                <field name="is_for_sale" invisible="1"/>
                                <field name="is_for_rent" invisible="1"/>
                                <field name="is_for_sale_rent" invisible="1"/>
                                <field name="is_available_for_rent" invisible="1"/>
                                <field name="is_available_for_sale" invisible="1"/>
                                <div name="options" groups="base.group_user">
                                    <div>
                                        <field name="property_for_sale"/>
                                        <label for="property_for_sale"/>
                                    </div>
                                    <div>
                                        <field name="property_for_rent" />
                                        <label for="property_for_rent" />
                                    </div>
                                </div>
                            </group>
                        </group>
                        <notebook>
                            <page name="property" string="Property Information" autofocus="autofocus" attrs="{'invisible':[('is_property','=',False)]}">
                                <group name="first_group">
                                    <group name="second_group">
                                        <field name="attachment" filename="filename_attachment"/>
                                        <field name="filename_attachment" invisible="1"/>
                                    </group>
                                </group>
                                <group name="property_info">
                                    <group string="Basic Information">
                                        <field name="type" string="Property Type" readonly="1" force_save="1"/>
                                        <field name="sale_type_property" attrs="{'invisible':[('property_for_sale','!=',True)],'required':[('property_for_sale','=',True)]}"/>
                                        <field name="rent_type_property" attrs="{'invisible':[('property_for_rent','!=',True)],'required':[('property_for_rent','=',True)]}"/>
                                        <label for="list_price" attrs="{'invisible':['|',('property_for_sale','!=',True),('sale_type_property','!=','full_unit')], 'required': [('property_for_sale', '=', True),('sale_type_property','=','full_unit')]}" string="Total Property Price"/>
                                        <div name="pricing" attrs="{'invisible':['|',('property_for_sale','!=',True),('sale_type_property','!=','full_unit')]}">
                                            <field name="list_price" class="oe_inline" widget="monetary"
                                                options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                                            <button name="open_pricelist_rules" icon="fa-arrow-right" type="object"
                                                    groups="product.group_product_pricelist" class="oe_inline">
                                                <field name="pricelist_item_count"
                                                    attrs="{'invisible': [('pricelist_item_count', '=', 0)]}"/>
                                                <span attrs="{'invisible': [('pricelist_item_count', '=', 1)]}">
                                                    Extra Prices
                                                </span>
                                                <span attrs="{'invisible': [('pricelist_item_count', '!=', 1)]}">
                                                    Extra Price
                                                </span>
                                            </button>
                                        </div>
                                        <field name="property_price" string="Land Price/m²" attrs="{'invisible': ['|',('property_for_sale', '!=', True),('sale_type_property','!=','partial_unit')], 'required': [('property_for_sale', '=', True),('sale_type_property','=','partial_unit')],'readonly': [('state', '!=', 'draft')]}"/>
                                        <field name="rent_price" string="Yearly Rent" attrs="{'invisible': ['|',('property_for_rent', '!=', True),('rent_type_property','!=','full_unit')], 'required': [('property_for_rent', '=', True),('rent_type_property','=','full_unit')]}" force_save="1" />
                                        <field name="deposite" attrs="{'invisible': ['|',('property_for_rent', '!=', True),('rent_type_property','!=','full_unit')], 'required': [('property_for_rent', '=', True),('rent_type_property','=','full_unit')]}" force_save="1" />
                                        <field name="daily_rent" attrs="{'invisible': ['|',('property_for_rent', '!=', True),('rent_type_property','!=','full_unit')], 'required': [('property_for_rent', '=', True),('rent_type_property','=','full_unit')]}" force_save="1" />
                                        <field name="rent_price_partial" attrs="{'invisible': ['|',('property_for_rent', '!=', True),('rent_type_property','!=','partial_unit')], 'required': [('property_for_rent', '=', True),('rent_type_property','=','partial_unit')]}" force_save="1" />
                                        <field name="deposite_partial" attrs="{'invisible': ['|',('property_for_rent', '!=', True),('rent_type_property','!=','partial_unit')], 'required': [('property_for_rent', '=', True),('rent_type_property','=','partial_unit')]}" force_save="1" />
                                        <field name="daily_price_partial" attrs="{'invisible': ['|',('property_for_rent', '!=', True),('rent_type_property','!=','partial_unit')], 'required': [('property_for_rent', '=', True),('rent_type_property','=','partial_unit')]}" force_save="1" />
                                        <field name="rent_per_year" invisible="1"/>
                                        <field name="rent_per_month" invisible="1"/>
                                        <field name="rent_per_week" invisible="1"/>
                                        <field name="rent_per_day" invisible="1"/>
                                        <field name="property_owner_id" attrs="{'required': ['|',('property_for_sale', '=', True),('property_for_rent', '=', True)],'readonly': [('state', '!=', 'draft')]}" options="{'no_create_edit': True}"/>
                                        <field name="salesperson_id" options="{'no_create_edit': True}" required="1"/>
                                        <field name="notary" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                        <field name="land_area" string="Total Land Area" required="1"/>
                                        <label for="remaining_area" string="Remaining Land Area"/>
                                        <div class="oe_row">
                                            <field name="remaining_area" readonly="1" force_save="1"/><span>m²</span>
                                        </div>
                                        <field name="building_area" string="Total Building Area" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                        <field name="property_avl_from" attrs="{'invisible':[('property_for_rent', '!=', True)],'required': [('type','=','property'),('property_for_rent', '=', True)],'readonly': [('state', '!=', 'draft')]}"/>
                                        <label for="age" attrs="{'invisible': [('property_for_rent', '!=', True)],'readonly': [('state', '!=', 'draft')]}"/>
                                        <div attrs="{'invisible': [('property_for_rent', '!=', True)],'readonly': [('state', '!=', 'draft')]}">
                                            <field name="age" class="oe_inline" attrs="{'invisible': [('age', '=', 0)],'readonly': [('state', '!=', 'draft')]}"/>
                                            <span class="ml8" attrs="{'invisible': [('age', '=', 0)],'readonly': [('state', '!=', 'draft')]}">Years </span>
                                            <field name="months" class="oe_inline" attrs="{'invisible': [('months', '=', 0)],'readonly': [('state', '!=', 'draft')]}"/>
                                            <span class="ml8" attrs="{'invisible': [('months', '=', 0)]}">Months </span>
                                        </div>
                                        <field name="construction_status" attrs="{'readonly': [('state', '!=', 'draft')]}"/>

                                    </group>
                                    <group string="Available Facility &amp; Services" name="facility">
                                        <label for="maintain_charge" attrs="{'invisible': [('property_for_rent', '!=', True)]}"/>
                                        <div attrs="{'invisible': [('property_for_rent', '!=', True)]}">
                                            <div class="o_row">
                                                <field name="maintain_charge" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                <span><![CDATA[&nbsp;]]></span>
                                                <field name="rent_unit" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                            </div>
                                        </div>

                                        <field name="partial_payment_ids" widget="many2many_tags" attrs="{'invisible': [('property_for_sale', '!=', True)], 'readonly': [('state', '!=', 'draft')]}" options="{'no_create_edit': True}"/>
                                        <field name="facility_ids" widget="many2many_checkboxes" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                    </group>
                                    <group string="Location Details" name="area_details">
                                        <field name="street" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                        <field name="location" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                        <field name="city" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                        <field name="zipcode" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                        <field name="state_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                        <field name="country_id" options="{'no_create': True}" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                        <field name="phone" attrs="{'readonly': [('state', '!=', 'draft')]}"/>

                                    </group>
                                    <group string="Other Information" name="other">
                                        <field name="property_floor" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                        <field name="build_area" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                        <field name="carpet_area" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                        <field name="bedrooms" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                        <field name="balconies" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                        <field name="washroom" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                    </group>
                                </group>
                                <group string="More Description">
                                    <field name="more_details" nolabel="1" placeholder="Property details." attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                    <field name="is_reserved" invisible="1"/>
                                    <field name="is_sold" invisible="1"/>
                                    <field name="user_id" invisible="1"/>
                                </group>
                            </page>
                            <page name="rent_payer" string="Renter Contract Details" attrs="{'invisible': ['|',('property_for_rent', '!=', True),('is_property','=',False)]}" groups="property_rental_mgt_app.group_manager,property_rental_mgt_app.group_rent_payer">
                                <field name="renter_history_ids" attrs="{'readonly': [('state', '!=', 'draft')]}">
                                    <tree create="false" edit="false">
                                        <field name="reference" string="Contract Name"/>
                                        <field name="renter"/>
                                        <field name="date"/>
                                        <field name="from_date" string="Start Date"/>
                                        <field name="to_date" string="Expired  Date"/>
                                        <field name="rent_price" />
                                        <field name="contract_month"/>
                                        <field name="deposite"/>
                                        <field name="invoice_id"/>
                                        <field name="state"/>
                                        <field name="is_invoice" invisible="1"/>
                                        <field name="contract_id" invisible="1"/>
                                        <button string="Create Invoice" class="oe_highlight" name="create_rent_invoice" type="object" attrs="{'invisible': [('is_invoice','=',True)]}"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="commission" string="Commission Details" groups="property_rental_mgt_app.group_manager" attrs="{'invisible':[('is_property','=',False)]}">
                                <field name="user_commission_ids" attrs="{'readonly': [('state', '!=', 'draft')]}">
                                    <tree editable="bottom">
                                        <field name="user_id" required="1"/>
                                        <field name="percentage" string="Commission in Percentage(%)"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="purchase_detail" string="Purchase Detail" attrs="{'invisible':[ ('is_sold', '=', False)]}">
                                <group>
                                    <group>
                                        <field name="user_id" string="Purchaser Name" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                            <page name="rent_detail" string="Renter Detail" attrs="{'invisible':[ ('is_reserved', '=', False)]}">
                                <group>
                                    <group>
                                        <field name="user_id" string="Renter Name" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- property_transaction kanban view -->
        <record id="product_template_property_transaction_view_kanban" model="ir.ui.view">
            <field name="name">property_transaction.view.kanban</field>
            <field name="model">product.template</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" class="oe_kanban_card_muted o_opportunity_kanban" create="false" records_draggable="0">
                    <field name="id"/>
                    <field name="list_price"/>
                    <field name="activity_state"/>
                    <field name="property_for_sale"/>
                    <field name="property_for_rent"/>
                    <field name="sale_ok"/>
                    <field name="rent_ok"/>
                    <field name="property_price"/>
                    <field name="rent_price"/>
                    <field name="deposite" optional="show"/>
                    <field name="deposite_partial" optional="show"/>
                    <field name="state"/>
                    <field name="is_sold"/>
                    <field name="is_reserved"/>
                    <field name="sale_type_property"/>
                    <field name="rent_type_property"/>
                    <field name="land_area"/>
                    <field name="remaining_area"/>
                    <field name="property_owner_id"/>
                    <field name="image_1920"/>
                    <progressbar field="activity_state" colors="{&quot;planned&quot;: &quot;success&quot;, &quot;today&quot;: &quot;warning&quot;, &quot;overdue&quot;: &quot;danger&quot;}"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click" style="position: relative; padding-top: 26px;">
                                <!-- Top-left badges: For Sale / For Rent based on sale_ok / rent_ok -->
                                <div style="position:absolute; top:6px; left:6px; display:flex; gap:6px;">
                                    <t t-if="record.sale_ok and record.sale_ok.raw_value == true">
                                        <div style="display:flex; align-items:center; border:1px solid #DEE0E3; background:#E7E9EA; padding:2px 6px; border-radius:12px;">
                                            <img t-att-src="'/equip3_property_masterdata/static/src/img/for_sale.png'" alt="For Sale" style="width:12px; height:12px; margin-right:4px;"/>
                                            <span style="color:#208431; font-size:11px; line-height:14px;">For Sale</span>
                                        </div>
                                    </t>
                                    <t t-if="record.rent_ok and record.rent_ok.raw_value == true">
                                        <div style="display:flex; align-items:center; border:1px solid #DEE0E3; background:#E7E9EA; padding:2px 6px; border-radius:12px;">
                                            <img t-att-src="'/equip3_property_masterdata/static/src/img/for_rent.png'" alt="For Rent" style="width:12px; height:12px; margin-right:4px;"/>
                                            <span style="color:#208431; font-size:11px; line-height:14px;">For Rent</span>
                                        </div>
                                    </t>
                                </div>
                                <!-- Top-right badge: Full Unit / Partial Unit (only when Can be Sold) -->
                                <t t-if="record.property_for_sale.raw_value == true">
                                    <div style="position:absolute; top:6px; right:6px; border:1px solid #DEE0E3; background:#E7E9EA; color:#333; padding:2px 8px; border-radius:12px; font-size:11px; line-height:14px;">
                                        <t>
                                            <field name="sale_type_property"/>
                                        </t>
                                    </div>
                                </t>
                                <t t-elif="record.property_for_rent.raw_value == true">
                                    <div style="position:absolute; top:6px; right:6px; border:1px solid #DEE0E3; background:#E7E9EA; color:#333; padding:2px 8px; border-radius:12px; font-size:11px; line-height:14px;">
                                        <t>
                                            <field name="rent_type_property"/>
                                        </t>
                                    </div>
                                </t>
                                <div class="o_kanban_image">
                                    <img t-att-src="kanban_image('product.template', 'image_1920', record.id.raw_value)" alt="Property" class="o_image_64_contain"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title"><h3><field name="name"/></h3></strong>
                                    <div style="margin-top:2px; color:#6B7280;"><field name="property_owner_id"/></div>

                                    <!-- Price display rules -->
                                    <t t-set="sale_type" t-value="record.sale_type_property and record.sale_type_property.raw_value or ''"/>
                                    <t t-set="rent_type" t-value="record.rent_type_property and record.rent_type_property.raw_value or ''"/>

                                    <!-- Full Unit Sale: list_price -->
                                    <t t-if="record.property_for_sale and record.property_for_sale.raw_value and sale_type == 'full_unit'">
                                        <div style="font-weight:700; font-size:18px; margin-top:6px;">
                                            <field name="list_price"/>
                                        </div>
                                    </t>
                                    <!-- Partial Unit Sale: property_price per m² -->
                                    <t t-elif="record.property_for_sale and record.property_for_sale.raw_value and sale_type == 'partial_unit'">
                                        <div style="font-weight:700; font-size:18px; margin-top:6px;">
                                            <field name="property_price"/> <span style="font-weight:400; font-size:12px; color:#6B7280;">per m²</span>
                                        </div>
                                    </t>

                                    <!-- Full Unit Rent: deposite per month -->
                                    <t t-if="record.property_for_rent and record.property_for_rent.raw_value and rent_type == 'full_unit'">
                                        <div style="font-weight:700; font-size:18px; margin-top:6px;">
                                            <field name="deposite"/> <span style="font-weight:400; font-size:12px; color:#6B7280;">/month</span>
                                        </div>
                                    </t>
                                    <!-- Partial Unit Rent: deposite_partial per month -->
                                    <t t-elif="record.property_for_rent and record.property_for_rent.raw_value and rent_type == 'partial_unit'">
                                        <div style="font-weight:700; font-size:18px; margin-top:6px;">
                                            <field name="deposite_partial"/> <span style="font-weight:400; font-size:12px; color:#6B7280;">/month</span>
                                        </div>
                                    </t>

                                    <!-- Remaining percentage bar -->
                                    <t t-set="total_area" t-value="record.land_area and record.land_area.raw_value or 0.0"/>
                                    <t t-set="remain_area" t-value="record.remaining_area and record.remaining_area.raw_value or 0.0"/>
                                    <t t-set="percent" t-value="total_area &gt; 0 and Math.round((remain_area / total_area) * 100) or 0"/>
                                    <div style="margin-top:12px;">
                                        <div style="font-weight:700;"> <t t-esc="percent"/> of 100%</div>
                                        <div style="height:8px; background:#E5E7EB; border-radius:8px; overflow:hidden; margin-top:6px;">
                                            <div t-att-style="'width:' + percent + '%; height:100%; background:#2E7D32;'"/>
                                        </div>
                                    </div>

                                    <!-- Land and remaining area details -->
                                    <div style="margin-top:12px; color:#6B7280;">
                                        <div style="display:flex; justify-content:space-between;">
                                            <div>Total Land Area</div>
                                            <div style="color:#111827;"><t t-esc="(record.land_area and record.land_area.raw_value) or 0.0"/> m²</div>
                                        </div>
                                        <div style="display:flex; justify-content:space-between; margin-top:4px;">
                                            <div>Remaining Area</div>
                                            <div style="color:#111827;"><t t-esc="(record.remaining_area and record.remaining_area.raw_value) or 0.0"/> m²</div>
                                        </div>
                                    </div>

                                    <div name="tags"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- product.template action window -->
        <record id="product_template_property_transaction_action" model="ir.actions.act_window">
