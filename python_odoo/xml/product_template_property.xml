<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- product.template inherit form view -->
        <record id="product_product_template_form_view_inherit" model="ir.ui.view">
            <field name="name">product.template.inherit.view.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_quotations"
                            type="object"
                            class="oe_stat_button"
                            icon="o-hm-smart-crm-quotations">
                        <field name="quotation_count" widget="statinfo" string="Quotations"/>
                    </button>
                    <button class="oe_stat_button" type="object" name="action_view_invoices" icon="o-hm-smart-all-invoices">
                        <div class="o_stat_info">
                            <field name="invoice_amount_total" class="o_stat_value" string="Invoice(s)" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                            <span class="o_stat_text">Invoice(s)</span>
                        </div>
                    </button>
                </xpath>
            </field>
        </record>
        <!-- product.template inherit form view -->
        <record id="product_template_form_view_inherit" model="ir.ui.view">
            <field name="name">product.template.inherit.view.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="equip3_property_masterdata.product_template_form_view_inherit"/>
            <field name="arch" type="xml">
                <field name="attachment" position="before">
                    <field name="parent_property_id" domain="[('type','=','property')]"/>
                </field>
            </field>
        </record>

        <!-- product.template inherit form view -->
        <record id="product_template_property_product_view_form_inherit" model="ir.ui.view">
            <field name="name">product.template.inherit.view.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="equip3_property_masterdata.product_template_property_product_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_quotations"
                            type="object"
                            class="oe_stat_button"
                            icon="o-hm-smart-crm-quotations">
                        <field name="quotation_count" widget="statinfo" string="Quotations"/>
                    </button>
                    <button class="oe_stat_button" type="object" name="action_view_invoices" icon="o-hm-smart-all-invoices">
                        <div class="o_stat_info">
                            <field name="invoice_amount_total" class="o_stat_value" string="Invoice(s)" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                            <span class="o_stat_text">Invoice(s)</span>
                        </div>
                    </button>
                </xpath>
            </field>
        </record>

        <record id="product_template_property_transaction_view_form" model="ir.ui.view">
            <field name="name">product.template.view.form</field>
            <field name="model">product.template</field>
            <field name="arch" type="xml">
                <form string="Property Transaction" create="false">
                    <header>
                        <field name="is_property" invisible="1"/>
                        <button name="button_confirm" string="Confirm Property" type="object" class="oe_highlight" icon="fa-check" states="draft" groups="property_rental_mgt_app.group_manager"/>
                        <button type="object" name="button_set_to_draft" string=" Set to Draft" icon="fa-edit" states="rent,sale" groups="property_rental_mgt_app.group_manager"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,for_sale,for_rent,for_sale_rent" attrs="{'invisible':[('state','!=','draft')]}"/>
                        <field name="for_sale_state" widget="statusbar" statusbar_visible="for_sale,reserved,sold" attrs="{'invisible':[('is_for_sale','!=',True)]}"/>
                        <field name="for_rent_state" widget="statusbar" statusbar_visible="for_rent,reserved,rented" attrs="{'invisible':[('is_for_rent','!=',True)]}"/>
                        <field name="for_sale_rent_state" widget="statusbar" statusbar_visible="for_sale_rent,reserved,rented,sold" attrs="{'invisible':[('is_for_sale_rent','!=',True)]}"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_quotations"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="o-hm-smart-crm-quotations">
                                <field name="quotation_count" widget="statinfo" string="Quotations"/>
                            </button>
                            <button class="oe_stat_button" type="object" name="action_view_invoices" icon="o-hm-smart-all-invoices">
                                <div class="o_stat_info">
                                    <field name="invoice_amount_total" class="o_stat_value" string="Invoice(s)" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                                    <span class="o_stat_text">Invoice(s)</span>
                                </div>
                            </button>
                        </div>

                        <field name="image_1920" widget="image" class="oe_avatar" options="{'preview_image': 'image_128'}"/>
                        <div class="oe_title">
                            <label for="name" string="Property Name"/>
                            <h1>
                                <field name="name" attrs="{'invisible': [('name','=','/')]}" placeholder="Property Name"/>
                            </h1>

                        </div>
                        <group name="first_group">
                            <group name="second_group">
                                <field name="parent_property_id" domain="[('type','=','property')]"/>
                                <field name="default_code" string="Property Code"/>
                                <field name="is_for_sale" invisible="1"/>
                                <field name="is_for_rent" invisible="1"/>
                                <field name="is_for_sale_rent" invisible="1"/>
                                <field name="is_available_for_rent" invisible="1"/>
                                <field name="is_available_for_sale" invisible="1"/>
                                <div name="options" groups="base.group_user" col="2">
                                    <div>
                                        <field name="sale_ok"/>
                                        <label for="sale_ok"/>
                                    </div>
                                    <div>
                                        <field name="rent_ok"/>
                                        <label for="rent_ok"/>
                                    </div>
                                </div>
                            </group>
                        </group>
                        <notebook>
                            <page name="property" string="Property Information" autofocus="autofocus" attrs="{'invisible':[('is_property','=',False)]}">
                                <group name="first_group">
                                    <group name="second_group">
                                        <field name="attachment" filename="filename_attachment"/>
                                        <field name="filename_attachment" invisible="1"/>
                                    </group>
                                </group>
                                <group name="property_info">
                                    <group string="Basic Information">
                                        <field name="type" string="Property Type" readonly="1" force_save="1"/>
                                        <field name="sale_type_property" attrs="{'invisible':[('sale_ok','!=',True)],'required':[('sale_ok','=',True)]}"/>
                                        <field name="rent_type_property" attrs="{'invisible':[('rent_ok','!=',True)],'required':[('rent_ok','=',True)]}"/>
                                        <label for="list_price" attrs="{'invisible':['|',('sale_ok','!=',True),('sale_type_property','!=','full_unit')], 'required': [('sale_ok', '=', True),('sale_type_property','=','full_unit')]}" string="Total Property Price"/>
                                        <div name="pricing" attrs="{'invisible':['|',('sale_ok','!=',True),('sale_type_property','!=','full_unit')]}">
                                            <field name="list_price" class="oe_inline" widget="monetary"
                                                options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                                            <button name="open_pricelist_rules" icon="fa-arrow-right" type="object"
                                                    groups="product.group_product_pricelist" class="oe_inline">
                                                <field name="pricelist_item_count"
                                                    attrs="{'invisible': [('pricelist_item_count', '=', 0)]}"/>
                                                <span attrs="{'invisible': [('pricelist_item_count', '=', 1)]}">
                                                    Extra Prices
                                                </span>
                                                <span attrs="{'invisible': [('pricelist_item_count', '!=', 1)]}">
                                                    Extra Price
                                                </span>
                                            </button>
                                        </div>
                                        <field name="property_price" string="Land Price/m²" attrs="{'invisible': ['|',('sale_ok', '!=', True),('sale_type_property','!=','partial_unit')], 'required': [('sale_ok', '=', True),('sale_type_property','=','partial_unit')],'readonly': [('state', '!=', 'draft')]}"/>
                                        <field name="rent_price" string="Yearly Rent" attrs="{'invisible': ['|',('rent_ok', '!=', True),('rent_type_property','!=','full_unit')], 'required': [('rent_ok', '=', True),('rent_type_property','=','full_unit')]}" force_save="1" />
                                        <field name="deposite" attrs="{'invisible': ['|',('rent_ok', '!=', True),('rent_type_property','!=','full_unit')], 'required': [('rent_ok', '=', True),('rent_type_property','=','full_unit')]}" force_save="1" />
                                        <field name="daily_rent" attrs="{'invisible': ['|',('rent_ok', '!=', True),('rent_type_property','!=','full_unit')], 'required': [('rent_ok', '=', True),('rent_type_property','=','full_unit')]}" force_save="1" />
                                        <field name="rent_price_partial" attrs="{'invisible': ['|',('rent_ok', '!=', True),('rent_type_property','!=','partial_unit')], 'required': [('rent_ok', '=', True),('rent_type_property','=','partial_unit')]}" force_save="1" />
                                        <field name="deposite_partial" attrs="{'invisible': ['|',('rent_ok', '!=', True),('rent_type_property','!=','partial_unit')], 'required': [('rent_ok', '=', True),('rent_type_property','=','partial_unit')]}" force_save="1" />
                                        <field name="daily_price_partial" attrs="{'invisible': ['|',('rent_ok', '!=', True),('rent_type_property','!=','partial_unit')], 'required': [('rent_ok', '=', True),('rent_type_property','=','partial_unit')]}" force_save="1" />
                                        <field name="rent_per_year" invisible="1"/>
                                        <field name="rent_per_month" invisible="1"/>
                                        <field name="rent_per_week" invisible="1"/>
                                        <field name="rent_per_day" invisible="1"/>
                                        <field name="property_owner_id" attrs="{'required': ['|',('sale_ok', '=', True),('rent_ok', '=', True)],'readonly': [('state', '!=', 'draft')]}" options="{'no_create_edit': True}"/>
                                        <field name="salesperson_id" options="{'no_create_edit': True}" required="1"/>
                                        <field name="notary" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                        <field name="land_area" string="Total Land Area" required="1"/>
                                        <label for="remaining_area" string="Remaining Land Area"/>
                                        <div class="oe_row">
                                            <field name="remaining_area" readonly="1" force_save="1"/><span>m²</span>
                                        </div>
                                        <field name="building_area" string="Total Building Area" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                        <field name="property_avl_from" attrs="{'invisible':[('rent_ok', '!=', True)],'required': [('type','=','property'),('rent_ok', '=', True)],'readonly': [('state', '!=', 'draft')]}"/>
                                        <label for="age" attrs="{'invisible': [('rent_ok', '!=', True)],'readonly': [('state', '!=', 'draft')]}"/>
                                        <div attrs="{'invisible': [('rent_ok', '!=', True)],'readonly': [('state', '!=', 'draft')]}">
                                            <field name="age" class="oe_inline" attrs="{'invisible': [('age', '=', 0)],'readonly': [('state', '!=', 'draft')]}"/>
                                            <span class="ml8" attrs="{'invisible': [('age', '=', 0)],'readonly': [('state', '!=', 'draft')]}">Years </span>
                                            <field name="months" class="oe_inline" attrs="{'invisible': [('months', '=', 0)],'readonly': [('state', '!=', 'draft')]}"/>
                                            <span class="ml8" attrs="{'invisible': [('months', '=', 0)]}">Months </span>
                                        </div>
                                        <field name="construction_status" attrs="{'readonly': [('state', '!=', 'draft')]}"/>

                                    </group>
                                    <group string="Available Facility &amp; Services" name="facility">
                                        <label for="maintain_charge" attrs="{'invisible': [('rent_ok', '!=', True)]}"/>
                                        <div attrs="{'invisible': [('rent_ok', '!=', True)]}">
                                            <div class="o_row">
                                                <field name="maintain_charge" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                                <span><![CDATA[&nbsp;]]></span>
                                                <field name="rent_unit" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                            </div>
                                        </div>

                                        <field name="partial_payment_ids" widget="many2many_tags" attrs="{'invisible': [('sale_ok', '!=', True)], 'readonly': [('state', '!=', 'draft')]}" options="{'no_create_edit': True}"/>
                                        <field name="facility_ids" widget="many2many_checkboxes" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                    </group>
                                    <group string="Location Details" name="area_details">
                                        <field name="street" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                        <field name="location" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                        <field name="city" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                        <field name="zipcode" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                        <field name="state_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                        <field name="country_id" options="{'no_create': True}" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                        <field name="phone" attrs="{'readonly': [('state', '!=', 'draft')]}"/>

                                    </group>
                                    <group string="Other Information" name="other">
                                        <field name="property_floor" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                        <field name="build_area" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                        <field name="carpet_area" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                        <field name="bedrooms" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                        <field name="balconies" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                        <field name="washroom" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                    </group>
                                </group>
                                <group string="More Description">
                                    <field name="more_details" nolabel="1" placeholder="Property details." attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                                    <field name="is_reserved" invisible="1"/>
                                    <field name="is_sold" invisible="1"/>
                                    <field name="user_id" invisible="1"/>
                                </group>
                            </page>
                            <page name="rent_payer" string="Renter Contract Details" attrs="{'invisible': ['|',('rent_ok', '!=', True),('is_property','=',False)]}" groups="property_rental_mgt_app.group_manager,property_rental_mgt_app.group_rent_payer">
                                <field name="renter_history_ids" attrs="{'readonly': [('state', '!=', 'draft')]}">
                                    <tree create="false" edit="false">
                                        <field name="reference" string="Contract Name"/>
                                        <field name="renter"/>
                                        <field name="date"/>
                                        <field name="from_date" string="Start Date"/>
                                        <field name="to_date" string="Expired  Date"/>
                                        <field name="rent_price" />
                                        <field name="contract_month"/>
                                        <field name="deposite"/>
                                        <field name="invoice_id"/>
                                        <field name="state"/>
                                        <field name="is_invoice" invisible="1"/>
                                        <field name="contract_id" invisible="1"/>
                                        <button string="Create Invoice" class="oe_highlight" name="create_rent_invoice" type="object" attrs="{'invisible': [('is_invoice','=',True)]}"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="commission" string="Commission Details" groups="property_rental_mgt_app.group_manager" attrs="{'invisible':[('is_property','=',False)]}">
                                <field name="user_commission_ids" attrs="{'readonly': [('state', '!=', 'draft')]}">
                                    <tree editable="bottom">
                                        <field name="user_id" required="1"/>
                                        <field name="percentage" string="Commission in Percentage(%)"/>
                                    </tree>
                                </field>
                            </page>
                            <page name="purchase_detail" string="Purchase Detail" attrs="{'invisible':[ ('is_sold', '=', False)]}">
                                <group>
                                    <group>
                                        <field name="user_id" string="Purchaser Name" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                            <page name="rent_detail" string="Renter Detail" attrs="{'invisible':[ ('is_reserved', '=', False)]}">
                                <group>
                                    <group>
                                        <field name="user_id" string="Renter Name" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- property_transaction kanban view -->
        <record id="product_template_property_transaction_view_kanban" model="ir.ui.view">
            <field name="name">property_transaction.view.kanban</field>
            <field name="model">product.template</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" class="o_kanban_small_column o_opportunity_kanban" create="false" records_draggable="0">
                    <field name="id"/>
                    <field name="lst_price"/>
                    <field name="activity_state"/>
                    <field name="sale_ok"/>
                    <field name="rent_ok"/>
                    <field name="property_price"/>
                    <field name="rent_price"/>
                    <field name="state"/>
                    <field name="is_sold"/>
                    <field name="is_reserved"/>
                    <field name="sale_type_property"/>
                    <field name="rent_type_property"/>
                    <field name="remaining_area"/>
                    <progressbar field="activity_state" colors="{&quot;planned&quot;: &quot;success&quot;, &quot;today&quot;: &quot;warning&quot;, &quot;overdue&quot;: &quot;danger&quot;}"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img t-att-src="kanban_image('product.template', 'image_128', record.id.raw_value)" alt="Product" class="o_image_64_contain"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title"><h3><field name="name"/></h3></strong>
                                    <t t-if="record.sale_ok.raw_value == True">
                                        <strong>Property Price : <field name="property_price"/></strong>
                                    </t>
                                    <br/>
                                    <t t-if="record.rent_ok.raw_value == True">
                                        <strong>Yearly Rent : <field name="rent_price"/></strong>
                                    </t>
                                    <ul>
                                        <li><strong>Owner : <field name="property_owner_id"/></strong></li>
                                        <li><strong>Property Type :
                                          <t t-if="record.sale_ok.raw_value == true and record.rent_ok.raw_value == true">
                                            <field name="sale_type_property"/>
                                          </t>
                                          <t t-elif="record.sale_ok.raw_value == true">
                                            <field name="sale_type_property"/>
                                          </t>
                                          <t t-else="">
                                            <field name="rent_type_property"/>
                                          </t>
                                        </strong></li>
                                        <li attrs="{'invisible':[ ('is_sold', '=', False)]}"><strong>Purchaser : <field name="user_id"/></strong></li>
                                        <li attrs="{'invisible':[ ('is_reserved', '=', False)]}"><strong>Renter : <field name="user_id"/></strong></li>
                                        <li>
                                            <t t-if="record.sale_ok.raw_value == true and record.rent_ok.raw_value == true">
                                                <t t-set="type_property" t-value="record.sale_type_property.raw_value"/>
                                            </t>
                                            <t t-elif="record.sale_ok.raw_value == true">
                                                <t t-set="type_property" t-value="record.sale_type_property.raw_value"/>
                                            </t>
                                            <t t-else="">
                                                <t t-set="type_property" t-value="record.rent_type_property.raw_value"/>
                                            </t>
                                            <t t-if="type_property == 'full_unit'">
                                                <strong>Total Land Area : <span style="color:#109F1A"><field name="land_area"/> m²</span></strong>
                                            </t>
                                            <t t-elif="type_property == 'partial_unit' and record.remaining_area.raw_value &gt; 0">
                                                <strong>Remaining Area: <span style="color:#109F1A"><field name="remaining_area"/> m²</span></strong>
                                            </t>
                                            <t t-elif="type_property == 'partial_unit' and record.remaining_area.raw_value == 0">
                                                <strong>Remaining Area: <span style="color:#BD210F"><field name="remaining_area"/> m²</span></strong>
                                            </t>
                                        </li>
                                    </ul>
                                    <div name="tags"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- product.template action window -->
        <record id="product_template_property_transaction_action" model="ir.actions.act_window">
            <field name="name">Property Overview</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[('is_property', '=', True),('type', '=', 'property')]</field>
            <field name="context">{'default_is_property': 1, 'default_state': 'draft', 'default_type': 'property'}</field>
            <field name="view_ids" eval="[(5, 0, 0),
                        (0, 0, {'view_mode': 'kanban', 'view_id': ref('product_template_property_transaction_view_kanban')}),
                        (0, 0, {'view_mode': 'form', 'view_id': ref('product_template_property_transaction_view_form')})]"/>
        </record>


        <!-- Menu Item -->
        <menuitem id="product_template_property_transaction_menu" parent="equip3_property_masterdata.property_operation_menu" name="Property Overview" action="product_template_property_transaction_action" sequence="4"/>
    </data>
</odoo>